<h1>Create a New Artisan for <%= @admin.email %>
</h1>
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <p>
      <%= flash[:alert] %>
    </p>
    <% if flash[:errors] %>
      <ul>
        <% flash[:errors].split(', ').each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>


<%= form_with model: [@admin, @artisan], local: true do |form| %>
  <div>
    <%= form.label :store_name, "Store Name" %>
      <%= form.text_field :store_name %>
  </div>

  <div>
    <%= form.label :email, "Email" %>
      <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, "Password" %>
      <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirm Password" %>
      <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit "Create Artisan" %>
  </div>
  <% end %>

    <%= link_to 'Back to Dashboard', dashboard_admin_path(@admin), class: 'btn btn-primary' %>