<!DOCTYPE html>
<html>

<head>
  <title>ArtisanMarketplace</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

      <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
      <%= javascript_importmap_tags %>
</head>

<body>
  <header>
    <nav>
      <ul>
        <li>
          <%= link_to 'Home' , dashboard_path_for(current_user) %>
        </li>
        <% if current_user %>
          <li>
            <%= link_to 'Logout' , auth_logout_path, data: { turbo_method: :delete,
              turbo_confirm: 'Are you sure you want to log out?' }, class: 'btn btn-danger' %>
          </li>
          <% else %>
            <li>
              <%= link_to 'Login' , auth_login_path %>
            </li>
            <% end %>
      </ul>
    </nav>
  </header>

  <!-- Flash messages -->
  <% flash.each do |key, message| %>
    <% if key=='errors' %>
      <!-- Only display errors in a list -->
      <ul class="error-messages">
        <% message.split(', ').each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% else %>
      <!-- General alerts or notices -->
      <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
          <%= message %>
      </div>
      <% end %>
      <% end %>

    <%= yield %>
</body>

</html>

