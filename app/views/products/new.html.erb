<h1>Create a New Product for <%= @artisan.email %>
</h1>

<%= form_with model: [@artisan, @product], local: true do |form| %>
  <div>
    <%= form.label :name, "Product Name" %>
      <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Product Description" %>
      <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, "Price" %>
      <%= form.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= form.label :stock, "Quantity in Stock" %>
      <%= form.number_field :stock %>
  </div>

  <div>
    <%= form.submit "Create Product" %>
  </div>
  <% end %>

  <%= link_to 'Back to Dashboard', dashboard_artisan_path(@artisan), class: 'btn btn-primary' %>